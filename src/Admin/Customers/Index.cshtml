@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Admin.Customers.CustomersViewModel
@{
    ViewData["Title"] = "Customers";
    // Set Layout here because _ViewStart.cshtml isn't loaded for some reason.
    Layout = "_Layout";
}

<div class="text-center">
    <h1 class="display-4">Customers</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Birth date</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td><a asp-action="Customer" asp-route-id="@customer.Id">@customer.Name</a></td>
                <td>@customer.Email</td>
                <td>@customer.BirthDate</td>
            </tr>
        }
        </tbody>
    </table>
</div>
